                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                    </tbody>
                </table>
            </div>
            
            <button class="claim full-house">Full House</button>
            <button class="claim top-row">Top Row</button>
            <button class="claim middle-row">Middle Row</button>
            <button class="claim bottom-row">Bottom Row</button>
            <button class="claim first-five">First Five</button>
        
            <h1 class="timer"></h1>
        
            <p>Disclosed Number</p>
            <div class="shownNumber"></div>
        
            <button onclick="setStorage()">Set storage</button>
            <button onclick="getStorage()">get storage</button>
        </div>
 
 


        <div id="recaptcha-container"></div>
    </body>


    <script src="js/firebase-app.js"></script>
    <script src="js/firebase-analytics.js"></script>
