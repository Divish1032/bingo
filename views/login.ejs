<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Bingo</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta content="" name="keywords" />
    <meta content="" name="description" />

    <script src="js/jquery.js"></script>
    <script src="js/popper.js"></script>
    <link rel="stylesheet" href="css/bootstrap.css" />
    <script src="js/bootstrap.js"></script>
    <link rel="stylesheet" href="css/style.css" />
  </head>
  <body>

    <!-- Loading Icon -->
    <div class="loader">
      <div class="spinner-border" style="color: #03e9f4;" role="status">
        <span class="sr-only">Loading...</span>
      </div>
    </div>
    <!-- Modal -->
    <div
      class="modal fade"
      id="otpModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="login-box otp">
            <h2>Verify OTP</h2>
            <div class="user-box">
              <input type="text" name="code" id="code" required />
              <label>OTP</label>
            </div>

            <button onClick="submitCode()">
              <span></span>
              <span></span>
              <span></span>
              <span></span>
              Verify OTP
            </button>

            <button type="button" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>

    <div class="main">
      <div
        class="toast"
        role="alert"
        style="margin: auto; position: relative; z-index: 1;"
        aria-live="assertive"
        aria-atomic="true"
        data-delay="8000"
      >
        <div class="toast-header">
          <strong class="mr-auto toast-message"></strong>
          <button
            type="button"
            class="ml-2 mb-1 close"
            data-dismiss="toast"
            aria-label="Close"
          >
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      </div>
      
      <div class="login container">
        <div class="login-box login-dialog">
          <h2>Login</h2>
          <div class="user-box">
            <input name="username" id="username" type="text" required />
            <label>Username</label>
          </div>
          <div class="user-box">
            <input type="text" name="phone" id="phone" required />
            <label>Mobile Number (10 digits)</label>
          </div>
          <button onClick="submitPhone()">
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            Send OTP
          </button>
        </div>
        <div id="recaptcha-container"></div>
      </div>

      <div class="homepage">
        
      </div>
    </div>
  </body>

  <script src="js/firebase-app.js"></script>
  <script src="js/firebase-auth.js"></script>
  <script src="js/firbase_login_script.js"></script>
</html>
