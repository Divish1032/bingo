<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel Bingo</title>
    <script src="/js/jquery.js"></script>
    <script src="/js/popper.js"></script>
    <link rel="stylesheet" href="/css/bootstrap.css" />
    <script src="/js/bootstrap.js"></script>
    <style>
        .userspt{
            display: none;
        }
    </style>
</head>
<body>
    <h2 style="text-align: center;margin-top: 30px;font-size: 42px;">Admin Panel</h2>

    <div class="container-fluid" style="margin-top: 20px;">
        <h3>Next Game</h3>
        <% if(nextGame){ %>
            <p>Game Id :  <%= nextGame._id %></p>
            <p>Game Time : <%= nextGame.game_time %></p>
            <h5>Game Players List :</h5>
            <table class="table table-striped table-dark">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">UID</th>
                    <th scope="col">Username</th>
                    <th scope="col">Phone Number</th>
                  </tr>
                </thead>
                <tbody>
                    <% gameusers.forEach((x, i) => { %>
                        <tr>
                            <th scope="row"><%= i+1 %></th>
                            <td><%= x.uid %></td>
                            <td><%= x.name %></td>
                            <td><%= x.phone %></td>
                          </tr>
                    <% }) %>
                </tbody>
              </table>
            
        <% }else{ %>
            <p>No game schduled</p>
        <% } %>
    </div>


    
    <div class="container-fluid">
        <h3>Past Games :</h3>
    

    <table class="table table-striped table-dark">
        <thead>
            <tr>
            <th scope="col">#</th>
            <th scope="col">Game ID</th>
            <th scope="col">Game Time</th>
            <th scope="col">Open</th>
            </tr>
        </thead>
        <tbody>
            <% pastGames.forEach((x, i) => { %>
                <tr>
                    <th scope="row"><%= i+1 %></th>
                    <td><%= x._id %></td>
                    <td><%= x.game_time %></td>
                    <td><button class="btn btn-outline-info" onclick="fetchUsers('<%= x._id %>')">Users</button></td>
                </tr>
                
            <% }) %>
        </tbody>
    </table>
    </div>
    

    <div class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog  modal-lg">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">Game User participation</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
                <table class="table table-sm table-dark">
                    <thead>
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col">UID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Phone</th>
                      </tr>
                    </thead>
                    <tbody>
                    </tbody>
                  </table>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>


</body>

<script>
    function fetchUsers(id){
        $('.modal tbody').html('')
        var xhr = new XMLHttpRequest();
        var url = "/fetch-users-game/" + id;
        xhr.open("GET", url, true);
        xhr.setRequestHeader("Content-Type", "application/json");
        xhr.onreadystatechange = function () {
            if (xhr.readyState === 4 && xhr.status === 200) {
                var json = JSON.parse(xhr.responseText);
                console.log(json.gameusers);
                json = json.gameusers
                json.forEach((x,i) => {
                    $('.modal tbody').append("<tr> <td scope='row'>" + (i+1) + "</td> <td>" + x.uid +"</td> <td>" + x.name + "</td> <td>" + x.phone + "</td>  </tr>")
                });
                $('.modal').modal('show')
            }
        };
        //var data = JSON.stringify({"uid": user.uid});
        xhr.send();
    }


</script>
</html>