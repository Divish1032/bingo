    <canvas id="my-canvas" style="position: fixed;z-index: -1;width: 100%;height: 100%;top: 0;"></canvas>
    <div class="loader">
      <div class="spinner-border" style="color: #03e9f4;" role="status">
        <span class="sr-only">Loading...</span>
      </div>
    </div>

    <div class="toast"
    role="alert"
    style="margin: auto; position: relative; z-index: 1;"
    aria-live="assertive"
    aria-atomic="true"
    data-delay="3000">
      <div class="toast-header">
        <strong class="mr-auto toast-message"></strong>
        <button
          type="button"
          class="ml-2 mb-1 close"
          data-dismiss="toast"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    </div>

    <div class="game-ended jumbotron jumbotron-fluid" style="margin-top: 50px;">
      <div class="container">
        <h1 class="display-4">OOP's!!!</h1>
        <p class="lead">Today's game has ended. Come back tommorow.</p>
      </div>
    </div>

    <div class="wait jumbotron jumbotron-fluid" style="margin-top: 50px;">
      <div class="container">
        <h1 class="display-4">Waiting!!!</h1>
        <p class="lead">
          Please wait as there is still some time for the game to begin.
        </p>
        <p id="timer"></p>
        <p>Game will automatically start.</p>
      </div>
    </div>

