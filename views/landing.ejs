<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Bingo</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <link rel="manifest" href="/js/pwa.webmanifest">
    <meta content="" name="keywords" />
    <meta content="" name="description" />

    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/jquery.js"></script>
    <script src="/js/popper.js"></script>
    <link rel="stylesheet" href="/css/bootstrap.css" />
    <script src="/js/bootstrap.js"></script>
    <link rel="stylesheet" href="/css/game.css" />
  </head>
  <body>

    <div class="loader">
      <div class="spinner-border" style="color: #03e9f4;" role="status">
        <span class="sr-only">Loading...</span>
      </div>
    </div>

    <div class="toast"
    role="alert"
    style="margin: auto; position: absolute; z-index: 1;"
    aria-live="assertive"
    aria-atomic="true"
    data-delay="8000">
      <div class="toast-header">
        <strong class="mr-auto toast-message"></strong>
        <button
          type="button"
          class="ml-2 mb-1 close"
          data-dismiss="toast"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    </div>

    <div class="game-ended jumbotron jumbotron-fluid">
      <div class="container">
        <h1 class="display-4">OOP's!!!</h1>
        <p class="lead">Today's game has ended. Come back tommorow.</p>
      </div>
    </div>

    <div class="wait jumbotron jumbotron-fluid">
      <div class="container">
        <h1 class="display-4">Waiting!!!</h1>
        <p class="lead">
          Please wait as there is still some time for the game to begin.
        </p>
        <p id="timer"></p>
        <p>Game will automatically start.</p>
      </div>
    </div>

    <div class="play">
      <!-- <div class="nextnumber">
        <p></p>
      </div> -->
      <div class="marquee">
        <p>Disclosed Words : </p>
      </div>
      <h1 class="nextnumber" style="color: white;"></h1>

      <!-- <div class="shownNumber"></div> -->

      <table class="ticket">
        <tbody>
          <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
          </tr>
          <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
          </tr>
          <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
          </tr>
        </tbody>
      </table>

      <div class="container" style="margin: 10px auto; text-align: center;">
        <button
          class="btn-sm btn btn-outline-secondary claim full-house"
          id="claim-ticket"
        >
          Full House
        </button>
        <button
          class="btn-sm btn btn-outline-secondary claim top-row"
          id="claim-ticket"
        >
          Top Row
        </button>
        <button
          class="btn-sm btn btn-outline-secondary claim middle-row"
          id="claim-ticket"
        >
          Middle Row
        </button>
        <button
          class="btn-sm btn btn-outline-secondary claim bottom-row"
          id="claim-ticket"
        >
          Bottom Row
        </button>
        <button
          class="btn-sm btn btn-outline-secondary claim first-five"
          id="claim-ticket"
        >
          First Five
        </button>
      </div>

      <!-- <button onclick="setStorage()">Set storage</button>
              <button onclick="getStorage()">get storage</button> -->
    </div>
  </body>

  <script src="/js/firebase-app.js"></script>
  <script src="/js/firebase-auth.js"></script>
  <script src="/js/socket.js"></script>

  <script src="/js/pwa.js"></script>
</html>
